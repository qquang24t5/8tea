         <children>
            <Group>
               <children>
                    <ImageView fitHeight="101.0" fitWidth="185.0" layoutX="153.0" layoutY="-21.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../img/logo.png" />
                        </image>
                    </ImageView>
                  <Label fx:id="lblNotification" alignment="CENTER" layoutX="47.0" layoutY="80.0" prefHeight="65.0" prefWidth="395.0" textAlignment="CENTER">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </Label>
                  <GridPane layoutX="48.0" layoutY="162.0" prefHeight="73.0" prefWidth="396.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="172.0" minWidth="10.0" prefWidth="77.0" />

                          <Label text="Mật khẩu" GridPane.rowIndex="1" />
                          <TextField fx:id="pfdPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
               </children>
            </Group>
              <Button fx:id="btnLogin" mnemonicParsing="false" onMouseClicked="#btnLogin_onMouseClicked" prefHeight="25.0" prefWidth="318.0" text="Đăng nhập ">
               <VBox.margin>
                  <Insets top="19.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
